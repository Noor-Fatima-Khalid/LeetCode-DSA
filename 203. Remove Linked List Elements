class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        if (!head)                                  return head;
        if (!head->next && head->val != val)        return head;
        while (head->val == val)
        {
            if (head->next == NULL)
            {
                head = NULL;
                break;
            }
            head = head->next;
        }
        
        for (ListNode *temp = head ; temp && temp->next != NULL ; )
        {
            ListNode *onward = temp->next;
            if (onward->val == val)
            {
                ListNode *del = onward;
                onward = onward->next;
                temp->next = temp->next->next;
                delete del;
            }
            else
            {
                temp = temp->next;
                onward = onward->next;
            }
        }
        return head;
    }
};
